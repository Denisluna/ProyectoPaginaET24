html(lang='en')
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, user-scalable=no")
    title ET24
    link(rel="stylesheet", href="/../public/css/layout.css", attr)
    link(rel="stylesheet", href="/../public/css/responsiveness.css", attr)
    link(href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@100;300;700;800&display=swap" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Anton&family=Open+Sans:wght@600&display=swap" rel="stylesheet")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js" integrity="sha512-IQLehpLoVS4fNzl7IfH8Iowfm5+RiMGtHykgZJl9AWMgqx0AmJ6cRWcB+GaGVtIsnC4voMfm8f2vwtY+6oPjpQ==" crossorigin="anonymous")
    script(src="https://kit.fontawesome.com/a2b3ccd4c2.js" crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
  body(data-barba="wrapper")

     .preload
       .text-animation
         h1.hide #[span.text E.T. N° 24]
         h1.hide #[span.text Más de 70 años guiando]
         h1.hide #[span.text a las futuras generaciones]
    .page-transition
      img(src="/../public/images/logo.png", alt="logo")
      ul.rows-c
        li
        li
        li
        li
        li
    .navigation-wrapper
      header
        .logo
          a.nav-link(href="/") #[img(src="/../public/images/logo.png", alt="logo")]
        nav.main-navigation
          a.nav-link.c-link(href="/") Inicio
          .dropdown
            span.nav-link.c-link Institucional #[i.fas.fa-chevron-down]
            .dropdown-content
              .op-layer
              .dropdown-bg
              .dropdown-nav-links
                a.nav-link(href="javascript:void(0)") Talleres
                .sub-dropdown
                  a.nav-link.c-link(href="javascript:void(0)") Especialidades
                  .dropdown-nav-links.sub-dropdown-content
                    a.nav-link.c-link(href="/institucional/especialidades/computacion") Computacion
                    a.nav-link.c-link(href="/institucional/especialidades/ade") Administracion Empresas
                a.nav-link.c-link(href="/institucional/proyectos-escolares") Proyectos Escolares
                a.nav-link.c-link(href="/institucional/equipo-docente") Equipo Docente
                a.nav-link.c-link(href="/institucional/regimen-evaluacion") Régimen de Evaluación
          a.nav-link.c-link(href="/bi") Bachillerato Internacional
          a.nav-link(href="http://et24de17-caba.edu.ar/moodle30/" target="_blank") Plataforma Virtual
        .btns-container
          span.nav-link.show-menu-btn #[i.fas.fa-bars]
          span.nav-link.contact-btn #[i.fas.fa-envelope]
          if(typeof user != 'undefined')
            a.nav-link(href="javascript:void(0)") #[i.fas.fa-user]
          else
            a.nav-link.sign-btn(href="/users/login") #[i.fas.fa-sign-in-alt]
      nav.res-navigation
        .nav-main
          .nav-c
            .nav-content-layout
              a.nav-link.c-link(href="/") Inicio
              a.nav-link.sub-nav-p(href="javascript:void(0)") Institucional
              .sub-nav-links
                a.nav-link.sub-nav-p(href="javascript:void(0)") Especialidades
                .sub-nav-links
                  a.nav-link(href="/institucional/especialidades/computacion") Computacion
                  a.nav-link(href="/institucional/especialidades/ade") Administracion Empresas
                a.nav-link.c-link(href="/institucional/proyectos-escolares") Proyectos Escolares
                a.nav-link(href="javascript:void(0)") Talleres
                a.nav-link.c-link(href="/institucional/equipo-docente") Equipo Docente
                a.nav-link.c-link(href="/institucional/regimen-evaluacion") Régimen de Evaluación
              a.nav-link.c-link(href="/bi") Bachillerato Internacional
              a.nav-link(href="http://et24de17-caba.edu.ar/moodle30/" target="_blank") Plataforma Virtual
    aside.contact
      .layer
      .contact-content
        .close-ct
          i.close-btn.fas.fa-times
  block contenido
  script(defer src="https://unpkg.com/@barba/core" integrity="" crossorigin="anonymous")
